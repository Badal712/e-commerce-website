/* Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Kaushan+Script&family=Lobster&family=Merriweather:wght@700&family=Open+Sans:ital,wght@0,300;1,400&family=Work+Sans:wght@200&display=swap');

*{
	padding: 0px;
	margin: 0px;
	box-sizing: border-box;
}
body{
	min-height : 100vh;
	display: flex;
	background:rgb(170, 213, 223);
	width: 100%;
	
}
header{
	position: fixed;
	display: inline-flex;
	width: 100%;
	background-color:rgb(60, 184, 222);
}
img{
	width: 150px;
	position: relative;
	left: 30px;
}
h1{
	position:absolute;
	left: 700px;
	top: 25px;
	font-family: 'Kaushan Script', cursive;
	font-size:3rem;
}
.Main{
	position:relative;
	top: 100px;
	left:590px;
	max-width:700px;
	width: 100%;
	justify-content: center;
	align-items: center;
	background:rgb(170, 213, 223);
	padding: 25px; 
}
h2{
	text-align:center;
	font-family: 'Merriweather', serif;
	font-size:1.8rem;
}

.Contener .form {
	margin-top: 30px;
}
.form > .main > .row  .input_box{
	width: 100%;
	margin-top:20px;
}
.input_box label {
	color:rgb(35, 2, 57);
	font-size: 1.5rem;
	font-family: 'Work Sans', sans-serif;

}
.Contener .input_box input{
	position: relative;
	height: 30px;
	width: 100%;
	outline: none;
	font-size: 1rem;
	color:rgb(82, 81, 81);
	margin-top: 8px;
	border: 1px solid #ddd;
	border-radius: 8px;
	padding:0 15px;
}
.Contener .input_box select{
	position: relative;
	height: 30px;
	width: 100%;
	outline: none;
	font-size: 1rem;
	color:rgb(82, 81, 81);
	margin-top: 8px;
	border: 1px solid #ddd;
	border-radius: 8px;
	padding:0 15px;
}
.Contener .row{
	display:flex;
	column-gap: 15px;
}
.btn{
	position: relative;
	top:30px;
	left: 150px;
	background-color:DodgerBlue;
	width: 100px;
	padding: 7px;
	border-radius:20px;
	border:none;
	text-align: center;
	display: inline-block;
	cursor: pointer;
	transition: all 0.6s;
	box-shadow: 0 5px 5px rgba(0,0,0,0.2);
}
.btn:hover{
	background-color: purple;
	color: white;
}
footer{
	position:absolute;
	top: 850px;
	max-width:100%;
	width: 100%;
	height: 80px;
	text-align: center;
	background-color:rgb(22, 19, 19) ;
}
footer > p{
	position: relative;
	top:30px;
	color:azure;
	font-size:1.2rem;
}

/*Responsive*/
@media screen and (max-width: 500px){
	header{
		position: fixed;
		display:flex;
		width: 100%;
		height:100px;
		background-color:rgb(60, 184, 222);
	}
	img{
		width: 100px;
		position: absolute;
		left: 15px;
	}
	h1{
		position:absolute;
		left: 150px;
		top: 25px;
		font-family: 'Kaushan Script', cursive;
		font-size:1.5rem;
	}
	.Main{
		position:static;
		top: 140px;
		left:20px;
		margin-top: 150px;
		max-width:700px;
		width: 100%;
		justify-content: center;
		align-items: center;
		background:rgb(204, 226, 231);
		padding: 25px; 
	}
	h2{
		text-align:center;
		font-family: 'Merriweather', serif;
		font-size:1.2rem;
	}
	.input_box label {
		color:rgb(35, 2, 57);
		font-size: 1rem;
		font-family: 'Work Sans', sans-serif;
	}
	.Contener .input_box input{
		position: static;
	}
	.form .row{
		flex-wrap: wrap;
	}
	.btn{
		position: relative;
		left: 50px;
	}
	footer{
		position:absolute;
		top: 1050px;
	}
}